@{
    ViewData["Title"] = "Home Page";
    <link href="~/css/CustomStyle.css" type="text/css" rel="stylesheet"/>
}
<div class="position-relative" style="height: 100vh; overflow: hidden;">
    <!-- Background Image -->
    <img src="~/Homepage.svg" class="img-fluid w-100 h-100 object-fit-cover" alt="Hero Background" />

    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-25"></div>

    <!-- Centered Content -->
    <div class="position-absolute top-50 start-50 translate-middle text-center text-white z-2">
