@model List<Hackathon_2025_Filipino_Homes.Models.ConversationModel>

@{
    ViewBag.Title = "Inbox";
}
<div class="container py-5">
    <h2 class="mb-4 text-center">Your Conversations</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center" role="alert">
            No messages yet. Start a conversation to see it here!
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="list-group shadow-sm rounded">
                    @foreach (var conversation in Model)
                    {
                        <a href="@Url.Action("Private", "Chat", new { accountId = conversation.OtherUserId })"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-semibold">Chat with @conversation.OtherUserId</div>
                                <small class="text-muted">Last message: @conversation.LastMessage.Content</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">View</span>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

